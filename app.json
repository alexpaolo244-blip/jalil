{
  "expo": {
    "name": "Shofyou Lite",
    "slug": "shofyou-lite",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "shofyou",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shofyou.lite",
      "associatedDomains": ["applinks:shofyou.com", "applinks:www.shofyou.com"],
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to the camera to upload photos and videos.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload photos and videos.",
        "NSMicrophoneUsageDescription": "This app needs access to the microphone to record videos."
      }
    },
    "android": {
      "package": "com.shofyou.lite",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "shofyou.com"
            },
            {
              "scheme": "https",
              "host": "www.shofyou.com"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photo library to upload photos and videos.",
          "cameraPermission": "This app needs access to the camera to upload photos and videos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
